---

<section id="education" class="education">
  <div class="container">
    <div class="section-header reveal">
      <span class="section-label">// Education</span>
      <h2 class="section-title">
        Academic <span class="text-gradient">Background</span>
      </h2>
    </div>

    <div class="education-grid">
      {education.map((item, index) => (
        <div class={`education-card reveal delay-${(index + 1) * 100}`}>
          <div class="education-icon">{item.icon}</div>
          <div class="education-content">
            <h3 class="education-degree">{item.degree}</h3>
            <p class="education-institution">{item.institution}</p>
            <div class="education-meta">
              <span class="education-location">
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
                {item.location}
              </span>
              <span class="education-year">
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="16" y1="2" x2="16" y2="6"></line>
                  <line x1="8" y1="2" x2="8" y2="6"></line>
                  <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                {item.year}
              </span>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .education {
    background: var(--bg-primary);
  }

  .education-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: var(--space-xl);
    max-width: 1000px;
    margin: 0 auto;
  }

  .education-card {
    display: flex;
    gap: var(--space-xl);
    padding: var(--space-xl);
    background: var(--bg-card);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-xl);
    transition: var(--transition-base);
  }

  .education-card:hover {
    border-color: var(--accent-cyan);
    transform: translateY(-5px);
  }

  .education-icon {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.75rem;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-lg);
    flex-shrink: 0;
  }

  .education-content {
    flex-grow: 1;
  }

  .education-degree {
    font-size: 1.25rem;
    color: var(--text-primary);
    margin: 0 0 var(--space-sm);
  }

  .education-institution {
    color: var(--text-secondary);
    font-size: 0.95rem;
    margin: 0 0 var(--space-md);
    line-height: 1.5;
  }

  .education-meta {
    display: flex;
    gap: var(--space-lg);
    flex-wrap: wrap;
  }

  .education-location,
  .education-year {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .education-location svg,
  .education-year svg {
    color: var(--accent-cyan);
  }

  @media (max-width: 500px) {
    .education-grid {
      grid-template-columns: 1fr;
    }

    .education-card {
      flex-direction: column;
      gap: var(--space-md);
    }

    .education-icon {
      width: 50px;
      height: 50px;
    }
  }
</style>
