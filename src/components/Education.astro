  {
    degree: "B.Tech in Computer Science",
    institution: "Adi Shankara Institute of Engineering and Technology",
    location: "Kerala, India",
    year: "2017 - 2021",
    icon: "ðŸŽ“"
  },
  {
    degree: "12th CBSE",
    institution: "Kendriya Vidyalaya",
    location: "Kadavanthra, Kochi",
    year: "2017",
    icon: "ðŸ“š"
  }
