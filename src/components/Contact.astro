<style>
  .contact {
    background: var(--bg-secondary);
    position: relative;
    /* Ensure parallax container context */
    transform-style: preserve-3d; 
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: start;
  }

  /* Contact Info */
  .contact-card {
    background: var(--bg-card);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
  }

  .contact-card h3 {
    font-size: 1.5rem;
    color: var(--text-primary);
    margin-bottom: var(--space-md);
  }

  .contact-card > p {
    color: var(--text-secondary);
    margin-bottom: var(--space-xl);
    line-height: 1.7;
  }

  .contact-options {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
  }

  .contact-option {
    padding: var(--space-lg);
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-lg);
    text-align: center;
    transition: var(--transition-base);
  }

  .contact-option:hover {
    transform: translateY(-3px);
  }

  .contact-option.enterprise:hover {
    border-color: var(--accent-cyan);
  }

  .contact-option.vibe {
    border-color: rgba(245, 158, 11, 0.3);
    background: rgba(245, 158, 11, 0.05);
  }

  .contact-option.vibe:hover {
    border-color: #f59e0b;
  }

  .option-icon {
    font-size: 1.5rem;
    margin-bottom: var(--space-sm);
  }

  .contact-option h4 {
    font-size: 0.9rem;
    color: var(--text-primary);
    margin-bottom: var(--space-xs);
  }

  .contact-option p {
    font-size: 0.75rem;
    color: var(--text-muted);
    margin: 0;
  }

  .contact-details {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
  }

  .contact-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-sm) var(--space-md);
    color: var(--text-secondary);
    border-radius: var(--radius-md);
    transition: var(--transition-fast);
  }

  .contact-link:hover {
    color: var(--accent-cyan);
    background: var(--glass-bg);
  }

  .contact-link svg {
    color: var(--accent-cyan);
  }

  .contact-link.vibe-link:hover {
    color: #f59e0b;
  }

  .contact-link.vibe-link svg {
    color: #f59e0b;
  }

  .location-map {
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .map-placeholder {
    height: 150px;
    background: linear-gradient(135deg, var(--bg-tertiary), var(--bg-secondary));
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    border: 1px dashed var(--glass-border);
    border-radius: var(--radius-lg);
  }

  .map-pin {
    animation: bounce 2s ease-in-out infinite;
  }

  .map-label {
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  /* Contact Form */
  .contact-form {
    background: var(--bg-card);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
  }

  .form-group {
    margin-bottom: var(--space-lg);
  }

  .form-group label {
    display: block;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-secondary);
    margin-bottom: var(--space-sm);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: var(--space-md);
    background: var(--bg-tertiary);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-md);
    color: var(--text-primary);
    font-family: var(--font-body);
    font-size: 1rem;
    transition: var(--transition-fast);
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--accent-cyan);
    box-shadow: 0 0 0 3px rgba(0, 255, 255, 0.1);
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: var(--text-muted);
  }

  .form-group select {
    cursor: pointer;
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .form-actions {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  .form-actions .btn {
    flex: 1;
    min-width: 180px;
  }

  /* Modal & Celebration */
  .modal-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(8px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .modal-overlay.active {
    opacity: 1;
    pointer-events: auto;
  }

  .modal-content {
    background: linear-gradient(135deg, rgba(20, 20, 20, 0.95), rgba(30, 30, 30, 0.95));
    border: 1px solid var(--accent-cyan);
    padding: var(--space-3xl);
    border-radius: var(--radius-xl);
    text-align: center;
    max-width: 400px;
    width: 90%;
    transform: scale(0.8);
    transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    box-shadow: 0 0 30px rgba(0, 255, 255, 0.2);
  }

  .modal-overlay.active .modal-content {
    transform: scale(1);
  }

  .modal-icon {
    font-size: 4rem;
    margin-bottom: var(--space-md);
    animation: bounce 2s infinite;
  }

  .modal-content h3 {
    font-size: 1.5rem;
    color: var(--accent-cyan);
    margin-bottom: var(--space-md);
  }

  .modal-content p {
    color: var(--text-secondary);
    margin-bottom: var(--space-xl);
    line-height: 1.6;
  }

  .celebration-canvas {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 999;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .contact-content {
      grid-template-columns: 1fr;
    }

    .contact-options {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .form-actions {
      flex-direction: column;
    }

    .form-actions .btn {
      width: 100%;
    }
  }
</style>

<script is:inline>
  var submitted = false;
  
  function showSuccess() {
    const modal = document.getElementById('success-modal');
    const form = document.getElementById('contact-form');
    
    if (modal) {
      modal.classList.add('active');
      form.reset();
      triggerFireworks();
    }
  }

  function closeModal() {
    const modal = document.getElementById('success-modal');
    if (modal) {
      modal.classList.remove('active');
    }
  }

  // Fireworks Effect
  function triggerFireworks() {
    const canvas = document.getElementById('celebration-canvas');
    if (!canvas) return;
    
    const ctx = canvas.getContext('2d');
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    const particles = [];
    const colors = ['#00ffff', '#ff00ff', '#f59e0b', '#ffffff'];

    function createParticle(x, y) {
      const particle = {
        x: x,
        y: y,
        vx: (Math.random() - 0.5) * 8,
        vy: (Math.random() - 0.5) * 8,
        color: colors[Math.floor(Math.random() * colors.length)],
        alpha: 1,
        size: Math.random() * 4 + 2
      };
      particles.push(particle);
    }

    // Launch fireworks from center
    for (let i = 0; i < 100; i++) {
      createParticle(canvas.width / 2, canvas.height / 2);
    }

    // Launch random bursts
    for (let k = 0; k < 5; k++) {
      setTimeout(() => {
        const x = Math.random() * canvas.width;
        const y = Math.random() * canvas.height;
        for (let i = 0; i < 50; i++) {
          createParticle(x, y);
        }
      }, k * 200);
    }

    function animate() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      
      for (let i = 0; i < particles.length; i++) {
        const p = particles[i];
        p.x += p.vx;
        p.y += p.vy;
        p.vy += 0.1; // gravity
        p.alpha -= 0.01;
        p.size *= 0.98;

        ctx.globalAlpha = p.alpha;
        ctx.fillStyle = p.color;
        ctx.beginPath();
        ctx.arc(p.x, p.y, p.size, 0, Math.PI * 2);
        ctx.fill();

        if (p.alpha <= 0) {
          particles.splice(i, 1);
          i--;
        }
      }

      if (particles.length > 0) {
        requestAnimationFrame(animate);
      } else {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
      }
    }

    animate();
  }
</script>


