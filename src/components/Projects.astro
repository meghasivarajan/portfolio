---
interface Project {
  id: string;
  title: string;
  description: string;
  tech: string[];
  highlights: string[];
  type: 'enterprise' | 'vibe';
  badges?: string[];
  link?: string;
  timeframe?: string;
}

const projects: Project[] = [
  {
    id: 'healthcare',
    title: 'Healthcare Analytics Dashboard',
    description: 'Comprehensive analytics platform for healthcare providers enabling data-driven decisions through interactive visualizations and reports.',
    tech: ['Angular', 'TypeScript', 'Highcharts', 'SCSS'],
    highlights: [
      'Facility comparison with multi-level filtering',
      'Population insights with demographic breakdowns',
      'Interactive data visualizations with drill-down',
      'Semi-circular gauge components for KPIs',
      'PDF report generation with custom templates',
      'Geographic mapping with marker clustering'
    ],
    type: 'enterprise'
  },
  {
    id: 'hrms',
    title: 'HR Management System',
    description: 'Full-featured HR platform streamlining employee management, leave workflows, and attendance tracking for enterprise organizations.',
    tech: ['Angular', 'RxJS', 'REST APIs', 'Bootstrap'],
    highlights: [
      'Comprehensive employee records management',
      'Multi-level leave approval workflows',
      'Real-time attendance tracking integration',
      'Role-based access control',
      'Real-time data synchronization'
    ],
    type: 'enterprise'
  },
  {
    id: 'chat',
    title: 'Real Estate Chat Module',
    description: 'Real-time messaging system integrated into a mobile real estate application, enabling instant communication between buyers and agents.',
    tech: ['React Native', 'WebSockets', 'Node.js'],
    highlights: [
      'Real-time bidirectional messaging',
      'Message read receipts and typing indicators',
      'Media sharing capabilities',
      'Push notification integration'
    ],
    type: 'enterprise'
  },
  {
    id: 'weather',
    title: 'Weather App',
    description: 'Beautiful, intuitive weather application with real-time forecasts based on automatic location detection.',
    tech: ['Flutter', 'Weather APIs', 'Location Services'],
    highlights: [
      'Real-time weather data from multiple sources',
      'Automatic & manual location detection',
      'Hourly and weekly forecasts',
      'Clean, modern UI with smooth animations'
    ],
    type: 'vibe',
    badges: ['üöÄ Published on Play Store', '‚ö° AI Assisted'],
    link: 'https://play.google.com/store/apps/details?id=com.seahousevillas.guest&pcampaignid=web_share',
    timeframe: 'Concept to Launch: 3 weeks'
  },
  {
    id: 'budget',
    title: 'Budget Tracking App',
    description: 'Personal finance management app with secure authentication and intuitive expense categorization.',
    tech: ['Flutter', 'Firebase Auth', 'Local Storage'],
    highlights: [
      'Secure user authentication',
      'Income and expense tracking',
      'Category-based organization',
      'Visual spending insights',
      'Offline-first architecture'
    ],
    type: 'vibe',
    badges: ['‚ö° AI Assisted'],
    timeframe: 'Rapid development cycle'
  }
];

const enterpriseProjects = projects.filter(p => p.type === 'enterprise');
const vibeProjects = projects.filter(p => p.type === 'vibe');
---

<section id="projects" class="projects">
  <div class="container">
    <div class="section-header reveal">
      <span class="section-label">// Portfolio</span>
      <h2 class="section-title">
        Featured <span class="text-gradient">Projects</span>
      </h2>
      <p class="section-subtitle">A selection of work I'm proud of</p>
    </div>

    <!-- Enterprise Projects -->
    <div class="projects-section">
      <h3 class="projects-category-title reveal">
        <span class="category-icon">üè¢</span>
        Enterprise Projects
      </h3>
      <div class="projects-grid">
        {enterpriseProjects.map((project, index) => (
          <article class={`project-card reveal delay-${(index + 1) * 100}`}>
            <div class="project-header">
              <div class="project-icon">
                {project.id === 'healthcare' && 'üè•'}
                {project.id === 'hrms' && 'üë•'}
                {project.id === 'chat' && 'üí¨'}
              </div>
              <h4 class="project-title">{project.title}</h4>
            </div>
            
            <p class="project-description">{project.description}</p>
            
            <div class="project-tech">
              {project.tech.map(t => (
                <span class="tech-tag">{t}</span>
              ))}
            </div>
            
            <ul class="project-highlights">
              {project.highlights.slice(0, 4).map(h => (
                <li>{h}</li>
              ))}
            </ul>
          </article>
        ))}
      </div>
    </div>

    <!-- Vibe Coded Projects -->
    <div class="projects-section vibe-section">
      <div class="vibe-section-header reveal">
        <h3 class="projects-category-title vibe-title">
          <span class="vibe-badge animate-pulse-glow">‚ö°</span>
          AI Assisted Apps
        </h3>
        <p class="vibe-tagline">Accelerated by AI ‚Äî from idea to launch in record time</p>
      </div>
      
      <div class="projects-grid vibe-grid">
        {vibeProjects.map((project, index) => (
          <article class={`project-card vibe-card reveal delay-${(index + 1) * 100}`}>
            <div class="project-badges">
              {project.badges?.map(badge => (
                <span class="badge badge-vibe">{badge}</span>
              ))}
            </div>
            
            <div class="project-header">
              <div class="project-icon vibe-icon">
                {project.id === 'weather' && 'üå§Ô∏è'}
                {project.id === 'budget' && 'üí∞'}
              </div>
              <h4 class="project-title">{project.title}</h4>
            </div>
            
            <p class="project-description">{project.description}</p>
            
            <div class="project-tech">
              {project.tech.map(t => (
                <span class="tech-tag vibe-tech">{t}</span>
              ))}
            </div>
            
            <ul class="project-highlights">
              {project.highlights.slice(0, 4).map(h => (
                <li>{h}</li>
              ))}
            </ul>
            
            {project.timeframe && (
              <div class="project-timeframe">
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
                {project.timeframe}
              </div>
            )}
            
            {project.link && (
              <a href={project.link} class="project-link btn btn-vibe" target="_blank" rel="noopener">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
                </svg>
                View on Play Store
              </a>
            )}
          </article>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .projects {
    background: var(--bg-secondary);
    position: relative;
  }

  .projects-section {
    margin-bottom: var(--space-4xl);
  }

  .projects-category-title {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    font-size: 1.5rem;
    color: var(--text-primary);
    margin-bottom: var(--space-2xl);
  }

  .category-icon {
    font-size: 1.75rem;
  }

  /* Projects Grid */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--space-xl);
  }

  /* Project Card */
  .project-card {
    background: var(--bg-card);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-xl);
    padding: var(--space-xl);
    transition: var(--transition-base);
    display: flex;
    flex-direction: column;
  }

  .project-card:hover {
    border-color: var(--accent-cyan);
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .project-badges {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
  }

  .project-header {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
  }

  .project-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-md);
    font-size: 1.5rem;
  }

  .project-title {
    font-size: 1.25rem;
    color: var(--text-primary);
    margin: 0;
  }

  .project-description {
    color: var(--text-secondary);
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: var(--space-lg);
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    margin-bottom: var(--space-lg);
  }

  .tech-tag {
    padding: var(--space-xs) var(--space-sm);
    background: rgba(0, 255, 255, 0.1);
    border: 1px solid rgba(0, 255, 255, 0.2);
    border-radius: var(--radius-sm);
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--accent-cyan);
  }

  .project-highlights {
    list-style: none;
    margin-bottom: var(--space-lg);
    flex-grow: 1;
  }

  .project-highlights li {
    position: relative;
    padding-left: var(--space-lg);
    color: var(--text-muted);
    font-size: 0.875rem;
    margin-bottom: var(--space-sm);
    line-height: 1.5;
  }

  .project-highlights li::before {
    content: '‚Üí';
    position: absolute;
    left: 0;
    color: var(--accent-cyan);
  }

  .project-expand {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    background: none;
    border: none;
    color: var(--accent-cyan);
    font-family: var(--font-body);
    font-size: 0.875rem;
    cursor: pointer;
    padding: 0;
    transition: var(--transition-fast);
    margin-top: auto;
  }

  .project-expand:hover {
    color: var(--accent-purple);
  }

  .project-expand svg {
    transition: var(--transition-fast);
  }

  .project-expand:hover svg {
    transform: translateX(5px);
  }

  /* Vibe Section Styling */
  .vibe-section {
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.03), rgba(239, 68, 68, 0.03));
    border: 1px solid rgba(245, 158, 11, 0.2);
    border-radius: var(--radius-xl);
    padding: var(--space-3xl);
    margin-top: var(--space-3xl);
  }

  .vibe-section-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .vibe-title {
    justify-content: center;
    margin-bottom: var(--space-sm);
  }

  .vibe-tagline {
    color: var(--text-muted);
    font-style: italic;
    margin: 0;
  }

  .vibe-card {
    border-color: rgba(245, 158, 11, 0.3);
  }

  .vibe-card:hover {
    border-color: #f59e0b;
    box-shadow: 0 20px 40px rgba(245, 158, 11, 0.15);
  }

  .vibe-icon {
    border-color: rgba(245, 158, 11, 0.3);
    background: rgba(245, 158, 11, 0.1);
  }

  .vibe-tech {
    background: rgba(245, 158, 11, 0.1);
    border-color: rgba(245, 158, 11, 0.3);
    color: #f59e0b;
  }

  .project-timeframe {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--text-muted);
    font-size: 0.875rem;
    font-style: italic;
    margin-bottom: var(--space-lg);
  }

  .project-timeframe svg {
    color: #f59e0b;
  }

  .project-link {
    width: 100%;
    margin-top: auto;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }

    .vibe-section {
      padding: var(--space-xl);
    }
  }
</style>

